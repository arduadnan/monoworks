<?xml version="1.0" encoding="UTF-8"?>
<Ui>
	<Actions>
		<Action name="New" slot="NewFile()" icon="new" shortcut="Ctrl+N" statusTip="Create a new file"/>
		<Action name="Open" slot="OpenFile()" icon="open" shortcut="Ctrl+O" statusTip="Open an existing file"/>
		<Action name="Save" slot="SaveFile()" icon="save" shortcut="Ctrl+S" statusTip="Save the current file"/>
		<Action name="Save As" slot="SaveFileAs()" icon="save-as" shortcut="Ctrl+A" statusTip="Save the current file with a different name"/>
		<Action name="Close" slot="CloseFile()" icon="close" shortcut="Ctrl+W" statusTip="Close the current file"/>
		<Action name="Quit" slot="Quit()" icon="exit" shortcut="Ctrl+Q" statusTip="Quit MonoWorks"/>
		
		<Action name="Undo" slot="Undo()" icon="edit-undo" shortcut="Ctrl+Z" statusTip="Undo the last action"/>
		<Action name="Redo" slot="Redo()" icon="edit-redo" shortcut="Ctrl+Y" statusTip="Redo the last undone action"/>
		<Action name="Cut" slot="EditCut()" icon="edit-cut" shortcut="Ctrl+X" statusTip="Cut the current selection to the clipboard"/>
		<Action name="Copy" slot="EditCopy()" icon="edit-copy" shortcut="Ctrl+C" statusTip="Copy the current selection to the clipboard"/>
		<Action name="Paste" slot="EditPaste()" icon="edit-paste" shortcut="Ctrl+V" statusTip="Paste the clipboard"/>
		
		<Action name="New Sketch" slot="NewSketch()" icon="add-sketch" statusTip="Create a new sketch"/>
		<Action name="Edit Sketch" slot="EditSketch()" icon="sketch" statusTip="Edit the selected sketch"/>		
		<Action name="Line" slot="SketchLine()" icon="line" statusTip="Add a line to the sketch"/>		
		<Action name="Arc" slot="SketchArc()" icon="arc" statusTip="Add an arc to the sketch"/>		
		<Action name="Spline" slot="SketchSpline()" icon="spline" statusTip="Add a spline to the sketch"/>
		
		<Action name="Extrusion" slot="AddExtrusion()" icon="extrusion" statusTip="Add an extrusion"/>
		<Action name="Revolution" slot="AddRevolution()" icon="revolution" statusTip="Add a revolution"/>
		<Action name="Sweep" slot="AddSweep()" icon="sweep" statusTip="Add a sweep"/>
		
	</Actions>

	<Menus>
		<Menu name="File">
			<MenuItem action="New"/>
			<MenuItem action="Open"/>
			<MenuItem action="Save"/>
			<MenuItem action="Save As"/>
			<MenuItem action="Close"/>
			<Separator/>
			<MenuItem action="Quit"/>
		</Menu>
		<Menu name="Edit">
			<MenuItem action="Undo"/>
			<MenuItem action="Redo"/>
			<Separator/>
			<MenuItem action="Cut"/>
			<MenuItem action="Copy"/>
			<MenuItem action="Paste"/>
		</Menu>
	</Menus>

	<Toolbars>
		<Toolbar name="File">
			<ToolItem action="New"/>
			<ToolItem action="Open"/>
			<ToolItem action="Save"/>
			<ToolItem action="Save As"/>
			<ToolItem action="Close"/>
			<Separator/>
			<ToolItem action="Quit"/>
		</Toolbar>
		<Toolbar name="Edit">
			<ToolItem action="Undo"/>
			<ToolItem action="Redo"/>
			<Separator/>
			<ToolItem action="Cut"/>
			<ToolItem action="Copy"/>
			<ToolItem action="Paste"/>
		</Toolbar>
	</Toolbars>
	
	<Toolbox name="Entity Toolbox">
		<Toolshelf name="Sketch">
			<Tool action="New Sketch"/>
			<Tool action="Edit Sketch"/>
			<Tool action="Line"/>
			<Tool action="Arc"/>
			<Tool action="Spline"/>
		</Toolshelf>
		<Toolshelf name="Features">
			<Tool action="Extrusion"/>
			<Tool action="Revolution"/>
			<Tool action="Sweep"/>
		</Toolshelf>
	</Toolbox>
	
</Ui>
