<UserControl x:Class="MonoWorks.GuiWpf.DrawingFrame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:t="clr-namespace:MonoWorks.GuiWpf.Tree"
    xmlns:mwg="clr-namespace:MonoWorks.GuiWpf"
    Height="300" Width="300">
    <Grid x:Name="theGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="50*" />
        </Grid.ColumnDefinitions>
        <t:TreeView Grid.Column="0"></t:TreeView>
        <GridSplitter x:Name="splitter" Grid.Column="1" HorizontalAlignment="Stretch" />
        <mwg:ViewportWrapper x:Name="viewportWrapper" Grid.Column="2"/>
    </Grid>
</UserControl>
