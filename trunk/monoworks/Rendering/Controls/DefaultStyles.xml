<StyleGroup name="Default">

	<StyleClass name="grad-hori">
		<Background hitState="None">
			<FillGradient start="Control Grad Dark" stop="Control Grad Light" direction="E2W"/>
		</Background>
		<Background hitState="Hovering">
			<FillGradient start="Control Hovering" stop="White" direction="E2W"/>
		</Background>
		<Background hitState="Selected">
			<FillGradient start="Green" stop="White" direction="E2W"/>
		</Background>
		<Foreground hitState="None">
			<Color name="Dark Gray"/>
		</Foreground>
	</StyleClass>
	
	<StyleClass name="tool">
		<Background hitState="Hovering">
			<FillGradient start="Control Grad Light" stop="White" direction="E2W"/>
		</Background>
		<Background hitState="Selected">
			<FillGradient start="Control Hovering" stop="Light Gray" direction="E2W"/>
		</Background>
		<Foreground hitState="Hovering">
			<Color name="Dark Gray"/>
		</Foreground>
		<Foreground hitState="Selected">
			<Color name="Dark Gray"/>
		</Foreground>
	</StyleClass>
</StyleGroup>